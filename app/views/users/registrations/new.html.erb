<div class="form-style-2">
  <div class="form-style-2-heading">Log In</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username, class: "content-label" %>
      <%= f.text_field :username, autofocus: true, class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "content-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "content-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "content-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="btn-submit wo-label">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>  