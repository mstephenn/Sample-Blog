<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h2><%= post.content_url != '' ? (link_to post.title, post.content_url) : (link_to post.title, post) %></h2></td>
      </tr>
      <tr>
        <td><%= link_to 'Comments', post_comments_path(post) %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
